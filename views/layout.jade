doctype default
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="")
    title=appTitle

    //Bootstrap core CSS. If no theme is passed in, we'll default to the theme called 'flatly'.   
    - var setTheme = theme
    if setTheme
      link(href="../static/bootstrap/css/theme/" + setTheme + "/bootstrap.css", rel="stylesheet")
    else
      link(href="../static/bootstrap/css/theme/flatly/bootstrap.css", rel="stylesheet")
    //Custom styles for this template
    link(href="../static/bootstrap/css/jumbotron-narrow.css", rel="stylesheet")
    // TODO: figure out how to put my CSS elsewhere
    link(href="../static/bootstrap/css/accretionmap.css", rel="stylesheet")
  body
    block content
    block footer
